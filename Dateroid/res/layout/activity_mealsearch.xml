<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/keyword_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="キーワード検索"/>
        
        <EditText 
            android:id="@+id/keyword_edit"
            android:layout_below="@id/keyword_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <ImageButton 
            android:id="@+id/keyword_btn"
            android:layout_toRightOf="@id/keyword_edit"
            android:layout_alignBottom="@id/keyword_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/areaselect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地域選択："/>
        <Spinner 
	        android:id="@+id/prefecture_spinner"
	        android:layout_toRightOf="@id/areaselect_text"
	        android:layout_alignBottom="@id/areaselect_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/mealCategory_text"
            android:layout_below="@id/areaselect_text"
            android:layout_alignLeft="@id/areaselect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="料理カテゴリ："/>
        <Spinner
	        android:id="@+id/category_spinner"
	        android:layout_toRightOf="@id/mealCategory_text"
	        android:layout_alignBottom="@id/mealCategory_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
   
        <ImageButton 
            android:id="@+id/search_btn"
            android:layout_alignRight="@id/category_spinner"
            android:layout_below="@id/category_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"/>
        
    </RelativeLayout>
    
</LinearLayout>
