<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
 	<TextView 
        android:id="@+id/spotname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
 	<TextView 
	    android:id="@+id/price_text"
	    android:layout_alignBottom="@id/spotname_text"
	    android:layout_alignParentRight="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
 	
	<ImageView 
	    android:id="@+id/divider"
	    android:layout_below="@id/spotname_text"
	    android:layout_alignLeft="@id/spotname_text"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="fitXY"
	    android:src="@android:drawable/divider_horizontal_dark"/>
	    
    <ImageView 
        android:id="@+id/home_image"
        android:layout_below="@id/divider"
        android:layout_alignLeft="@id/divider"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_launcher"/>

   <TextView 
	    android:id="@+id/address_text"
	    android:layout_alignBottom="@id/home_image"
	    android:layout_toRightOf="@id/home_image"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
	
</RelativeLayout>
