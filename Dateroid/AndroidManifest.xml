            android:name="jap.gr.java_conf.dateroid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".PlaceSearchActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.UI_OPTIONS"
                   android:value="splitActionBarWhenNarrow"/>
        </activity>
        <activity 
            android:name=".PlaceMapActivity">
        </activity>
        <activity 
            android:name=".MealSearchActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.UI_OPTIONS"
                   android:value="splitActionBarWhenNarrow"/>
        </activity>
        <activity 
            android:name=".RestaurantListActivity"
           	android:launchMode="singleTop">
        </activity>
        <activity 
            android:name=".RestaurantDetailActivity">
        </activity>
        <activity 
            android:name=".DiaryEditActivity">
        </activity>
        <activity 
            android:name=".PhotoListActivity">
        </activity>
        <activity 
            android:name=".HistoryActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.UI_OPTIONS"
                   android:value="splitActionBarWhenNarrow"/>
        </activity>
        <activity 
            android:name=".ConditionActivity">
        </activity>
        <activity 
            android:name=".SharedDateListActivity">
        </activity>
        <activity 
            android:name=".EditPlanActivity">
        </activity>
        <activity 
            android:name=".DateSpotListActivity">
        </activity>
        <activity 
            android:name=".SpotDetailActivity">
        </activity>
        <activity android:name=".FavoriteRegisterActivity"></activity>
        
    </application>

</manifest>
